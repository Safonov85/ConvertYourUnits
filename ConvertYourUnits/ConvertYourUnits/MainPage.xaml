<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConvertYourUnits"
             x:Class="ConvertYourUnits.MainPage"
             BackgroundColor="#cacaca">

    <Grid Margin="0,20,0,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Label x:Name="labelMain" Text="Convert Units" HorizontalTextAlignment="Center" 
            Grid.Row="0" Margin="5" BackgroundColor="Gray" FontSize="40" TextColor="White"/>
        <Picker x:Name="picker" SelectedIndex="0" SelectedIndexChanged="picker_SelectedIndexChanged"
                Grid.Row="1" BackgroundColor="Gray" TextColor="White"/>
        <Slider x:Name="sliderMain" Minimum="0" Maximum="100" Value="0" Grid.Row="2"
                BackgroundColor="Gray" ValueChanged="sliderMain_ValueChanged"/>
    </Grid>

</ContentPage>